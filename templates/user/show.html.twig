{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mx-auto my-8">
        <h1 class="text-4xl font-bold mb-6 text-center">User Details</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            <table class="min-w-full bg-white">
                <tbody>
                    <tr class="border-b">
                        <th class="py-4 px-6 text-left font-semibold">Id</th>
                        <td class="py-4 px-6">{{ user.id }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-4 px-6 text-left font-semibold">Email</th>
                        <td class="py-4 px-6">{{ user.email }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-4 px-6 text-left font-semibold">Roles</th>
                        <td class="py-4 px-6">{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-4 px-6 text-left font-semibold">Password</th>
                        <td class="py-4 px-6">{{ user.password }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="flex justify-between mt-6">
            <a href="{{ path('app_user_index') }}" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg">
                Back to list
            </a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-2 px-4 rounded-lg">
                Edit
            </a>
        </div>

        <div class="mt-4">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
