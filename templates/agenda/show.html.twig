{% extends 'base.html.twig' %}

{% block title %}Agenda{% endblock %}

{% block body %}
    <h1 class="general_marginTop">Agenda</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agenda.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ agenda.title }}</td>
            </tr>
            <tr>
                <th>EventDate</th>
                <td>{{ agenda.eventDate ? agenda.eventDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ agenda.startTime ? agenda.startTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndTime</th>
                <td>{{ agenda.endTime ? agenda.endTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ agenda.description }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ agenda.location }}</td>
            </tr>
            <tr>
                <th>IsOnline</th>
                <td>{{ agenda.isOnline }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_agenda_index') }}">back to list</a>

    <a href="{{ path('app_agenda_edit', {'id': agenda.id}) }}">edit</a>

    {{ include('agenda/_delete_form.html.twig') }}
{% endblock %}
